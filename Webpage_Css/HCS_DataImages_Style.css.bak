.topnav {
  background-color: #000080;
  overflow: hidden;
}

.topnav a {
	
  float:right;
  color: white;
  text-align: center;
  padding: 25px 25px;
  text-decoration: none;
  font-size: 17px;
  position: relative;
 
}

.topnav a:hover {
  background-color: #FFBF00 ;
  color: white;
}

.topnav a.active {
  color: white;
}
body{
font-family: verdana;
}
/* The grid: Four equal columns that floats next to each other */
.column {
  display:inline-block;
  width: 15%;
  margin-left: 90px;
  padding: 10px;
}

/* Style the images inside the grid */
.column img {
  opacity: 0.8; 
  cursor: pointer; 
}

.column img:hover {
  opacity: 1;
}


.row:after {
  content: "";
  display: table;
  clear: both;
}

/* The expanding image container */
.container {
  height: 400px;
  margin-top:100px;
  margin-left: 200px;
  margin-right:200px;
  margin-bottom:100px;
  
  text-align:center;
  border: 5px solid #000080;
  position: relative;
  display: block;
}
.title{
	margin-top:80px;
	text-align:center;
}

#imgtext {
  position: absolute;
  bottom: 15px;
  left: 15px;
  color: black;
  font-size: 20px;
  font-weight: bold;
}

#expandedImg{
  margin:auto;
  width:70%;
}

.closebtn {
  position: absolute;
  top: 10px;
  right: 15px;
  color: black;
  font-size: 35px;
  cursor: pointer;
}

a{
